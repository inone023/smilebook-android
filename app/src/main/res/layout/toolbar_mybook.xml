<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_mybook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:menu="@menu/menu_toolbar">

    <LinearLayout
        android:layout_width="104dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/all_book_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/nobackground"
            android:textColor="#5551FF"
            android:textStyle="bold"
            android:text="전체"/>

        <View
            android:id="@+id/all_book_view"
            android:layout_width="70dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@drawable/user_btn"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="104dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/no_return_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/nobackground"
            android:textColor="#5551FF"
            android:textStyle="bold"
            android:text="반납 미완료" />

        <View
            android:id="@+id/no_return_view"
            android:layout_width="70dp"
            android:layout_height="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>




</androidx.appcompat.widget.Toolbar>